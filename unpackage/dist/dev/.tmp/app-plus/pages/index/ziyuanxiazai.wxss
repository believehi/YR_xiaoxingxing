	position: absolute;
	bottom: 10%;
	left: 27.5%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-shadow: 0rem 5rpx #c11a53;
	        box-shadow: 0rem 5rpx #c11a53;
}
.icon-box {
	width: 20%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
	border-right: 2rpx solid #FFFFFF;
}
.text-box {
	text-align: center;
	line-height: 72rpx;
	width: 80%;
	color: #FFFFFF;
	font-size: 32rpx;
	font-weight: bold;
	letter-spacing: 1rpx;
}

