
page{
	width: 100%;
	padding: 2% 3%;
}
.content{
	width: 94%;
}
textarea{
	width:100%;
	min-height: 20%;
	color: #999999;
	font-size: 30rpx;
	padding: 2%;
}
.uni-xz-zp view{
	width: 210rpx;
	height: 210rpx;
	background-color: #efefef;
	position: relative;
	border-radius: 10rpx;
	overflow: hidden;
}
.uni-img {
	display: inline-block;
	margin: 0 20rpx 20rpx 0;
}
.uni-xz-zp image{
	width: 100%;
	height: 100%;
	/* background-color: #efefef; */
}
.uni-xz-zp .uni-delete {
	width: 40rpx;
	height: 40rpx;
	position: absolute;
	right: 0;
	top: 0;
}
.uni-tj{
	text-align: center;
	line-height: 240rpx;
}
.fa-plus{
	font-size: 80rpx;
	color: #c9caca;
}
.uni-wz-box{
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	border-top: 1rpx solid #e6e6e6;
	border-bottom: 1rpx solid #e6e6e6;
	color: #999999;
	margin-top: 50rpx;
}
.uni-wz-box text{
	font-size: 26rpx;
	color: #999999;
	padding: 25rpx 0;
	margin-left: 15rpx;
}
.qd_but {
	margin-top: 50rpx;
	width: 314rpx;
	height: 68rpx;
	color: #FFFFFF;
	background-color: #006666 !important;
	border-radius: 5px;
	letter-spacing: 35rpx;
	text-indent: 35rpx;
	-webkit-box-shadow: 0rem 5rpx #006666;
	        box-shadow: 0rem 5rpx #006666;
	font-size: 30rpx;
	line-height: 68rpx;
}

