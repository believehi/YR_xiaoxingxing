.uni-audio {
	width: 100%;
	height: 120rpx;
	border-radius: 10rpx;
	border: 1rpx solid #e6e6e6;
}
.audio-bf,
.audio-ly {
	width: 100%;
	height: 100%;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.audio-ly-gb {
	padding: 0 20rpx;
	border-right: 1rpx solid #CCCCCC;
	width: 50rpx;
	height: 40rpx;
	position: relative;
}
.audio-ly-gb::before,
.audio-ly-gb::after {
	position: absolute;
	content: '';
	top: 20rpx;
	left: 30rpx;
	width: 30rpx;
	border: 1rpx solid;
}
.audio-ly-gb::before {
	-webkit-transform: rotate(45deg);
	    -ms-transform: rotate(45deg);
	        transform: rotate(45deg);
}
.audio-ly-gb::after {
	-webkit-transform: rotate(-45deg);
	    -ms-transform: rotate(-45deg);
	        transform: rotate(-45deg);
}
.audio-ly-sj {
	margin-left: 50rpx;
	color: #f40;
	font-size: 36rpx;
	line-height: 35rpx;
	position: relative;
	-webkit-box-flex: 1;
	-webkit-flex: 1;
	    -ms-flex: 1;
	        flex: 1;
}
.audio-ly-sj::after {
	content: '';
	position: absolute;
	left: -20rpx;
	top: 12rpx;
	width: 12rpx;
	height: 12rpx;
	border-radius: 50%;
	background-color: #f40;
}
.audio-ly-kj {
	width: 45rpx;
	height: 45rpx;
	margin-right: 30rpx;
}
.audio-bf-img image,
.audio-ly-kj image{
	width: 100%;
	height: 100%;
}
.audio-ly-ok {
	color: #009899;
	font-size: 36rpx;
